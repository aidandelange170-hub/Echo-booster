<UserControl x:Class="EchoBooster.SecurityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoBooster"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Security Monitor" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20"/>
            
            <TextBlock Text="Security Overview" FontSize="18" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,10"/>
            
            <!-- Security Metrics -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="#3498db" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Security Score" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="SecurityScoreText" Text="Excellent" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" Background="#e74c3c" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Threats Found" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ThreatsCountText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" Background="#f39c12" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Suspicious Processes" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="SuspiciousProcessesText" Text="0" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" Background="#2ecc71" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Antivirus Status" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="AntivirusStatusText" Text="Active" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Security Scan Button -->
            <Button x:Name="SecurityScanBtn" Content="Run Security Scan" 
                    Background="#9b59b6" Foreground="White" 
                    Padding="15,10" Margin="0,0,0,20" 
                    Click="SecurityScanBtn_Click"/>
            
            <!-- Security Threats List -->
            <GroupBox Header="Security Threats" Margin="0,0,0,20">
                <DataGrid x:Name="ThreatsDataGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          HeadersVisibility="Column" 
                          GridLinesVisibility="Horizontal"
                          RowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            
            <!-- Security Actions -->
            <GroupBox Header="Security Actions" Margin="0,0,0,20">
                <StackPanel>
                    <Button Content="Run Full System Scan" 
                            Background="#3498db" Foreground="White" 
                            Padding="15,10" Margin="0,0,0,10"/>
                    <Button Content="Update Security Definitions" 
                            Background="#2ecc71" Foreground="White" 
                            Padding="15,10" Margin="0,0,0,10"/>
                    <Button Content="View Security Logs" 
                            Background="#f39c12" Foreground="White" 
                            Padding="15,10" Margin="0,0,0,10"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>