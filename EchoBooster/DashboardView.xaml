<UserControl x:Class="EchoBooster.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoBooster"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="System Dashboard" FontSize="28" FontWeight="Bold" 
                       Foreground="#2c3e50" Margin="0,0,0,20"/>
            <TextBlock Text="Real-time system performance monitoring and optimization" FontSize="16" 
                       Foreground="#7f8c8d" Margin="0,0,0,30"/>

            <!-- System Metrics Cards -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#3498db" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="CPU" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CpuUsageText" Text="0%" FontSize="24" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <ProgressBar x:Name="CpuProgressBar" Height="8" Margin="0,10,0,0" 
                                     Background="#2980b9" Foreground="#1abc9c"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#e74c3c" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Memory" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="MemoryUsageText" Text="0%" FontSize="24" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <ProgressBar x:Name="MemoryProgressBar" Height="8" Margin="0,10,0,0" 
                                     Background="#c0392b" Foreground="#1abc9c"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#9b59b6" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Disk" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="DiskUsageText" Text="0%" FontSize="24" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <ProgressBar x:Name="DiskProgressBar" Height="8" Margin="0,10,0,0" 
                                     Background="#8e44ad" Foreground="#1abc9c"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="#f39c12" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Network" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="NetworkStatusText" Text="Connected" FontSize="24" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <ProgressBar x:Name="NetworkProgressBar" Height="8" Margin="0,10,0,0" 
                                     Background="#d35400" Foreground="#1abc9c"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- System Information Panel -->
            <Border Background="White" CornerRadius="8" Margin="0,0,0,20" 
                    BorderBrush="#bdc3c7" BorderThickness="1" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="System Information" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2c3e50" Margin="0,0,0,10"/>
                        
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Total Memory:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                            <TextBlock x:Name="TotalMemoryText" Text="0 MB" Margin="10,0,0,5" Foreground="#7f8c8d"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Available Memory:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                            <TextBlock x:Name="AvailableMemoryText" Text="0 MB" Margin="10,0,0,5" Foreground="#7f8c8d"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Running Processes:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                            <TextBlock x:Name="ProcessCountText" Text="0" Margin="10,0,0,5" Foreground="#7f8c8d"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Performance Metrics" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2c3e50" Margin="0,0,0,10"/>
                        
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Total Threads:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                            <TextBlock x:Name="ThreadCountText" Text="0" Margin="10,0,0,5" Foreground="#7f8c8d"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5">
                            <TextBlock Text="System Uptime:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                            <TextBlock x:Name="UptimeText" Text="0 days" Margin="10,0,0,5" Foreground="#7f8c8d"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Boot Time:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                            <TextBlock x:Name="BootTimeText" Text="N/A" Margin="10,0,0,5" Foreground="#7f8c8d"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Performance Charts -->
            <GroupBox Header="Performance Charts" Margin="0,0,0,20" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="CPU Usage Over Time" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Border Grid.Row="1" Background="#ecf0f1" CornerRadius="5" Padding="10">
                        <Canvas x:Name="CpuChartCanvas" Background="White"/>
                    </Border>

                    <TextBlock Grid.Row="2" Text="Memory Usage Over Time" FontWeight="Bold" Margin="0,20,0,10"/>
                    <Border Grid.Row="3" Background="#ecf0f1" CornerRadius="5" Padding="10">
                        <Canvas x:Name="MemoryChartCanvas" Background="White"/>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Quick Actions -->
            <GroupBox Header="Quick Actions" Margin="0,0,0,20" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="IntelligentOptimizeBtn" Content="Intelligent Optimization" 
                            Background="#8e44ad" Foreground="White" 
                            Padding="20,10" Margin="0,0,10,0" 
                            Click="IntelligentOptimizeBtn_Click"/>
                    <Button x:Name="OptimizeSystemBtn" Content="Optimize System" 
                            Background="#27ae60" Foreground="White" 
                            Padding="20,10" Margin="0,0,10,0" 
                            Click="OptimizeSystemBtn_Click"/>
                    <Button x:Name="RefreshBtn" Content="Refresh Data" 
                            Background="#3498db" Foreground="White" 
                            Padding="20,10" Margin="0,0,10,0" 
                            Click="RefreshBtn_Click"/>
                    <Button x:Name="StopMonitoringBtn" Content="Stop Monitoring" 
                            Background="#e74c3c" Foreground="White" 
                            Padding="20,10" Click="StopMonitoringBtn_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>