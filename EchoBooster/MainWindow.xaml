<Window x:Class="EchoBooster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EchoBooster - System Performance Optimizer" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#f0f0f0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="EchoBooster" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Advanced System Performance Optimizer" FontSize="16" Foreground="#ecf0f1" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,15,0" 
                    BorderBrush="#bdc3c7" BorderThickness="1" Padding="10">
                <StackPanel>
                    <Button x:Name="DashboardBtn" Content="Dashboard" Style="{StaticResource NavButtonStyle}" 
                            Margin="0,0,0,10" Click="DashboardBtn_Click"/>
                    <Button x:Name="PerformanceBtn" Content="Performance" Style="{StaticResource NavButtonStyle}" 
                            Margin="0,0,0,10" Click="PerformanceBtn_Click"/>
                    <Button x:Name="ProcessesBtn" Content="Processes" Style="{StaticResource NavButtonStyle}" 
                            Margin="0,0,0,10" Click="ProcessesBtn_Click"/>
                    <Button x:Name="NetworkBtn" Content="Network" Style="{StaticResource NavButtonStyle}" 
                            Margin="0,0,0,10" Click="NetworkBtn_Click"/>
                    <Button x:Name="OptimizeBtn" Content="Optimize" Style="{StaticResource NavButtonStyle}" 
                            Margin="0,0,0,10" Click="OptimizeBtn_Click"/>
                    <Button x:Name="ResourceManagerBtn" Content="Resource Manager" Style="{StaticResource NavButtonStyle}" 
                            Margin="0,0,0,10" Click="ResourceManagerBtn_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Content Panel -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" 
                    BorderBrush="#bdc3c7" BorderThickness="1">
                <ScrollViewer>
                    <StackPanel x:Name="ContentPanel" Margin="20">
                        <!-- Dashboard Content will be loaded here -->
                        <TextBlock x:Name="TitleText" Text="Dashboard" FontSize="24" FontWeight="Bold" 
                                   Foreground="#2c3e50" Margin="0,0,0,20"/>
                        <TextBlock Text="Welcome to EchoBooster - Your System Performance Optimizer" FontSize="16" 
                                   Foreground="#7f8c8d" Margin="0,0,0,30"/>
                        
                        <!-- System Metrics Cards -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#3498db" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="CPU" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="CpuUsageText" Text="0%" FontSize="24" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    <ProgressBar x:Name="CpuProgressBar" Height="8" Margin="0,10,0,0" 
                                                 Background="#2980b9" Foreground="#1abc9c"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Background="#e74c3c" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Memory" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="MemoryUsageText" Text="0%" FontSize="24" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    <ProgressBar x:Name="MemoryProgressBar" Height="8" Margin="0,10,0,0" 
                                                 Background="#c0392b" Foreground="#1abc9c"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="2" Background="#9b59b6" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Disk" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="DiskUsageText" Text="0%" FontSize="24" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    <ProgressBar x:Name="DiskProgressBar" Height="8" Margin="0,10,0,0" 
                                                 Background="#8e44ad" Foreground="#1abc9c"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="3" Background="#f39c12" CornerRadius="8" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="Network" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="NetworkStatusText" Text="Connected" FontSize="24" FontWeight="Bold" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    <ProgressBar x:Name="NetworkProgressBar" Height="8" Margin="0,10,0,0" 
                                                 Background="#d35400" Foreground="#1abc9c"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Real-time Charts -->
                        <GroupBox Header="Performance Charts" Margin="0,20,0,20" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="200"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="CPU Usage Over Time" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Border Grid.Row="1" Background="#ecf0f1" CornerRadius="5" Padding="10">
                                    <Canvas x:Name="CpuChartCanvas" Background="White"/>
                                </Border>
                                
                                <TextBlock Grid.Row="2" Text="Memory Usage Over Time" FontWeight="Bold" Margin="0,20,0,10"/>
                                <Border Grid.Row="3" Background="#ecf0f1" CornerRadius="5" Padding="10">
                                    <Canvas x:Name="MemoryChartCanvas" Background="White"/>
                                </Border>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Quick Actions -->
                        <GroupBox Header="Quick Actions" Margin="0,0,0,20" Padding="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="OptimizeSystemBtn" Content="Optimize System" 
                                        Background="#27ae60" Foreground="White" 
                                        Padding="20,10" Margin="0,0,10,0" 
                                        Click="OptimizeSystemBtn_Click"/>
                                <Button x:Name="RefreshBtn" Content="Refresh Data" 
                                        Background="#3498db" Foreground="White" 
                                        Padding="20,10" Margin="0,0,10,0" 
                                        Click="RefreshBtn_Click"/>
                                <Button x:Name="StopMonitoringBtn" Content="Stop Monitoring" 
                                        Background="#e74c3c" Foreground="White" 
                                        Padding="20,10" Click="StopMonitoringBtn_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495e" Padding="15,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text=" | " Foreground="#bdc3c7" VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock x:Name="LastUpdatedText" Text="Last Updated: --" Foreground="#bdc3c7" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
    
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ecf0f1"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3498db"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>