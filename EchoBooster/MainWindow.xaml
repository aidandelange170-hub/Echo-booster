<Window x:Class="EchoBooster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EchoBooster - System Performance Optimizer" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#f8f9fa">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Header -->
        <Border Grid.Row="0" Background="#1a1a2e" Padding="20,15" CornerRadius="0,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="EchoBooster" FontSize="32" FontWeight="Bold" Foreground="#e94560" HorizontalAlignment="Left"/>
                    <TextBlock Text="Advanced System Performance Optimizer" FontSize="16" Foreground="#f1f1f1" HorizontalAlignment="Left" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="UpdateCheckBtn" Content="Check for Updates" 
                            Background="#2a9d8f" Foreground="White" 
                            Padding="15,8" Margin="0,0,10,0" 
                            Click="UpdateCheckBtn_Click" 
                            HorizontalAlignment="Right"/>
                    <TextBlock x:Name="VersionText" Text="v3.0" FontSize="14" 
                               Foreground="#f1f1f1" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Modern Navigation Panel -->
            <Border Grid.Column="0" Background="#ffffff" CornerRadius="12" Margin="0,0,20,0" 
                    BorderBrush="#e0e0e0" BorderThickness="1" Padding="15">
                <StackPanel>
                    <TextBlock Text="Navigation" FontSize="18" FontWeight="Bold" 
                               Foreground="#1a1a2e" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    
                    <Button x:Name="DashboardBtn" Content="Dashboard" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="DashboardBtn_Click" Tag="dashboard"/>
                    <Button x:Name="PerformanceBtn" Content="Performance" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="PerformanceBtn_Click" Tag="performance"/>
                    <Button x:Name="ProcessesBtn" Content="Processes" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="ProcessesBtn_Click" Tag="processes"/>
                    <Button x:Name="NetworkBtn" Content="Network" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="NetworkBtn_Click" Tag="network"/>
                    <Button x:Name="SecurityBtn" Content="Security" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="SecurityBtn_Click" Tag="security"/>
                    <Button x:Name="HealthBtn" Content="Health Check" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="HealthBtn_Click" Tag="health"/>
                    <Button x:Name="OptimizeBtn" Content="Optimize" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="OptimizeBtn_Click" Tag="optimize"/>
                    <Button x:Name="ResourceManagerBtn" Content="Resource Manager" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="ResourceManagerBtn_Click" Tag="resource"/>
                    <Button x:Name="SettingsBtn" Content="Settings" Style="{StaticResource ModernNavButtonStyle}" 
                            Margin="0,0,0,10" Click="SettingsBtn_Click" Tag="settings"/>
                </StackPanel>
            </Border>
            
            <!-- Modern Content Panel -->
            <Border Grid.Column="1" Background="#ffffff" CornerRadius="12" 
                    BorderBrush="#e0e0e0" BorderThickness="1">
                <ScrollViewer>
                    <StackPanel x:Name="ContentPanel" Margin="25">
                        <!-- Dashboard Content will be loaded here -->
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Modern Status Bar -->
        <Border Grid.Row="2" Background="#1a1a2e" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" Text="Ready" Foreground="#f1f1f1" VerticalAlignment="Center"/>
                    <TextBlock Text=" | " Foreground="#a0a0a0" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock x:Name="LastUpdatedText" Text="Last Updated: --" Foreground="#a0a0a0" VerticalAlignment="Center"/>
                    <TextBlock Text=" | " Foreground="#a0a0a0" VerticalAlignment="Center" Margin="10,0"/>
                    <TextBlock x:Name="SystemStatusText" Text="System Status: Normal" Foreground="#2ecc71" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="System:" Foreground="#a0a0a0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="SystemInfoText" Text="Windows 10/11" Foreground="#f1f1f1" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    
    <Window.Resources>
        <Style x:Key="ModernNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#1a1a2e"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e94560"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#c72f47"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>