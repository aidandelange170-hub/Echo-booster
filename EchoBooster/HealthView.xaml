<UserControl x:Class="EchoBooster.HealthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoBooster"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="System Health Monitor" FontSize="24" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20"/>
            
            <TextBlock Text="Health Overview" FontSize="18" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,10"/>
            
            <!-- Health Metrics -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="#2ecc71" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Health Score" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="HealthScoreText" Text="Good" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" Background="#e74c3c" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Issues Found" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="IssuesCountText" Text="3" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" Background="#f39c12" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Critical Issues" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CriticalIssuesText" Text="1" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" Background="#3498db" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Last Checked" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LastCheckedText" Text="Just now" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Health Check Button -->
            <Button x:Name="HealthCheckBtn" Content="Run Health Check" 
                    Background="#9b59b6" Foreground="White" 
                    Padding="15,10" Margin="0,0,0,20" 
                    Click="HealthCheckBtn_Click"/>
            
            <!-- Health Issues List -->
            <GroupBox Header="Health Issues" Margin="0,0,0,20">
                <DataGrid x:Name="IssuesDataGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          HeadersVisibility="Column" 
                          GridLinesVisibility="Horizontal"
                          RowHeight="35">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            
            <!-- Health Actions -->
            <GroupBox Header="Health Actions" Margin="0,0,0,20">
                <StackPanel>
                    <Button x:Name="FixIssuesBtn" Content="Auto-Fix Issues" 
                            Background="#2ecc71" Foreground="White" 
                            Padding="15,10" Margin="0,0,0,10"/>
                    <Button x:Name="GenerateReportBtn" Content="Generate Health Report" 
                            Background="#3498db" Foreground="White" 
                            Padding="15,10" Margin="0,0,0,10"
                            Click="GenerateReportBtn_Click"/>
                    <Button x:Name="ScheduleCheckBtn" Content="Schedule Health Check" 
                            Background="#f1c40f" Foreground="White" 
                            Padding="15,10" Margin="0,0,0,10"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>