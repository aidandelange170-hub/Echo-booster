<UserControl x:Class="EchoBooster.ProcessesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoBooster"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Running Processes" FontSize="24" FontWeight="Bold" 
                   Foreground="#2c3e50" Margin="0,0,0,20"/>
        
        <Border Grid.Row="1" Background="White" CornerRadius="8" 
                BorderBrush="#bdc3c7" BorderThickness="1">
            <DataGrid x:Name="ProcessesDataGrid" AutoGenerateColumns="False" 
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      Margin="10" RowHeight="30">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Process Name" Binding="{Binding ProcessName}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="PID" Binding="{Binding ProcessId}" 
                                        Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                    <DataGridTextColumn Header="CPU %" Binding="{Binding CpuUsage, StringFormat=F2}" 
                                        Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                    <DataGridTextColumn Header="Memory (MB)" Binding="{Binding MemoryUsage, StringFormat=F0}" 
                                        Width="100" ElementStyle="{StaticResource RightAlignStyle}"/>
                    <DataGridTextColumn Header="Threads" Binding="{Binding ThreadCount}" 
                                        Width="80" ElementStyle="{StaticResource RightAlignStyle}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" 
                                        Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <Grid.Resources>
            <Style x:Key="RightAlignStyle" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Right"/>
            </Style>
        </Grid.Resources>
    </Grid>
</UserControl>