<UserControl x:Class="EchoBooster.NetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EchoBooster"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Network Monitor" FontSize="24" FontWeight="Bold" 
                   Foreground="#2c3e50" Margin="0,0,0,10"/>
        
        <!-- Network Status Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="#3498db" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Active Connections" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ActiveConnectionsText" Text="0" FontSize="24" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Background="#2ecc71" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Network Status" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="NetworkStatusText" Text="Disconnected" FontSize="24" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" Background="#9b59b6" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Network Speed" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="NetworkSpeedText" Text="Unknown" FontSize="24" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Network Connections List -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" 
                BorderBrush="#bdc3c7" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Active Network Connections" FontSize="18" FontWeight="SemiBold"
                           Foreground="#2c3e50" Margin="15,10,15,10"/>
                           
                <DataGrid x:Name="NetworkConnectionsGrid" Grid.Row="1" AutoGenerateColumns="False" 
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          Margin="10" RowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Local Address" Binding="{Binding LocalAddress}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Remote Address" Binding="{Binding RemoteAddress}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" 
                                            Width="80" ElementStyle="{StaticResource CenterAlignStyle}"/>
                        <DataGridTextColumn Header="State" Binding="{Binding State}" 
                                            Width="100"/>
                        <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" 
                                            Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <Grid.Resources>
            <Style x:Key="CenterAlignStyle" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
    </Grid>
</UserControl>